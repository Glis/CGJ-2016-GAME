<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1 class="title1">Invite your minions!</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <% @game.minions.each do |minion| %>
        <div class="row">
          <div class="col-md-12">
            <h2 class="title2 inline">
              <%= "Turno #{minion.position}: #{minion.name}"%>
            </h2>
            <div class="white-pill text-center inline minion-pill">
              <%= "code: #{minion.id}"%>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <input type="text" class="clear-style minions text-center"></input>
    </div>
  </div>
</div>
