<div class="container">
  <div class="row">
    <div class="col-md-12">
      <h1>Invite your minions!!</h1>
      <% @game.minions.each do |minion| %>
        <%= link_to "Minion #{minion.name}", minion_show_path(minion)%>
        <button class="btn btn-info">COPY</button>
      <% end %>
      <button class="btn btn-primary btn-block">START!</button>
    </div>
  </div>
</div>
